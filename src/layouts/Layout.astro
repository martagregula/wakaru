---
import "../styles/global.css";
import { Toaster } from "../components/ui/toaster";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b border-border/30 bg-[oklch(0.99_0.004_30)]/70 backdrop-blur-sm">
      <div class="mx-auto flex w-full max-w-5xl items-center justify-between px-6 py-4">
        <a class="logo-link font-logo text-[1.4rem] tracking-[2px] text-logo no-underline hover:opacity-90" href="/"
          >Wakaru</a
        >
        <nav class="flex items-center gap-3 text-sm">
          {
            user ? (
              <>
                <a class="font-semibold text-foreground hover:text-primary" href="/saved" data-testid="nav-saved-link">
                  Moje Zdania
                </a>
                <form method="post" action="/logout">
                  <button
                    class="rounded-md border bg-background px-3 py-1.5 text-sm font-semibold text-foreground shadow-xs hover:bg-accent hover:text-accent-foreground"
                    type="submit"
                    data-testid="nav-logout-button"
                  >
                    Wyloguj
                  </button>
                </form>
              </>
            ) : (
              <>
                <a class="font-semibold text-foreground hover:text-primary" href="/login" data-testid="nav-login-link">
                  Zaloguj
                </a>
                <a
                  class="rounded-md border bg-background px-3 py-1.5 text-sm font-semibold text-foreground shadow-xs hover:bg-accent hover:text-accent-foreground"
                  href="/register"
                  data-testid="nav-register-link"
                >
                  Zarejestruj
                </a>
              </>
            )
          }
        </nav>
      </div>
    </header>
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
