---
import "../styles/global.css";
import { Toaster } from "../components/ui/toaster";

interface Props {
  title?: string;
}

const { title = "10x Astro Starter" } = Astro.props;
const user = Astro.locals.user;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="border-b border-border/40 bg-background/80">
      <div class="mx-auto flex w-full max-w-5xl items-center justify-between px-6 py-4">
        <a class="text-lg font-semibold text-foreground" href="/"> Wakaru </a>
        <nav class="flex items-center gap-3 text-sm">
          {
            user ? (
              <>
                <a class="text-foreground hover:text-primary" href="/saved" data-testid="nav-saved-link">
                  Moje Zdania
                </a>
                <form method="post" action="/logout">
                  <button
                    class="rounded-md border border-border px-3 py-1.5 text-foreground hover:border-primary hover:text-primary"
                    type="submit"
                    data-testid="nav-logout-button"
                  >
                    Wyloguj
                  </button>
                </form>
              </>
            ) : (
              <>
                <a class="text-foreground hover:text-primary" href="/login" data-testid="nav-login-link">
                  Zaloguj
                </a>
                <a
                  class="rounded-md border border-border px-3 py-1.5 text-foreground hover:border-primary hover:text-primary"
                  href="/register"
                  data-testid="nav-register-link"
                >
                  Zarejestruj
                </a>
              </>
            )
          }
        </nav>
      </div>
    </header>
    <slot />
    <Toaster client:load />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
